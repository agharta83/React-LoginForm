@require "app/styles/charte"

/*
 * Classes
 */
.app
	&-title
		color: $color-title
		font-family: Cinzel
		font-size: 1.6em
		text-transform: uppercase

	&-desc
		font-size: 1.1em
		line-height: 1.4
		margin: 1.25em 0

	&-link
		color: $color-link
		cursor: pointer
		display: block
		font-size: 1.1em
		margin: 1em 0
		text-align: center
		text-decoration: underline

		&--back
			text-align: left

			&::before
				content: ""
				display: inline-block
				background: url("../images/arrow.svg") no-repeat center
				background-size: contain
				width: .8em
				height: .8em
				margin-right: .25em
				transform: rotate(.5turn)

.form
	margin: 1em 0

	&-submit
		background: $color-button-background
		border: 0
		border-radius: 0
		color: $color-button
		font-size: 1em
		display: block
		text-transform: uppercase
		height: 3.3em
		width: 100%

		&.form-submit--login
			display: flex
			align-items: center
			justify-content: center
			&::before
				content: ""
				background: url("../images/cat.svg") no-repeat bottom left
				background-size: contain
				height: 1.5em
				width: 1.5em
				margin-right: .6em

.input
	width: 100%
	height: 3.3em;
	color: #51483f
	border: 1px solid #ccc
	margin-bottom: 0.7em
	padding-left: 1em

.input::placeholder
	color #999


.input:focus, #password:focu
	border: 1px solid #67c8d4



/*
 * ID
 */
#app
	color: $color-text
	max-width: 360px
	margin: 3em auto
